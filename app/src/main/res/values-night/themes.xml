<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes.Night" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ic_launcher_background</item>
        <item name="colorSecondaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnSecondary">@color/ic_launcher_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ic_launcher_background</item>
        <!-- Action Bar is disabled -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:contentInsetStartWithNavigation">0dp</item>
        <item name="android:contentInsetEndWithActions">0dp</item>
    </style>
</resources>